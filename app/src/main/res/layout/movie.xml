<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/moviePosterPresentation"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp">
                android:textSize="10sp"/>


                <TextView
                    android:id="@+id/movieTitlePresentation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/moviePlotPresentation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#555" />

                <TextView
                    android:id="@+id/movieRatePresentation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#555"
                    android:ellipsize="end"
                    android:maxLines="3"/>
                <TextView
                    android:id="@+id/movieDatePresentation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#555"
                    android:ellipsize="end"
                    android:maxLines="3"/>
                <TextView
                    android:id="@+id/movieLanguagePresentation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#555"
                    android:ellipsize="end"
                    android:maxLines="3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/shareButtonPresentation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="share"
                    android:theme="@style/PrimaryFlatButton" />

            </LinearLayout>
        </LinearLayout>
</RelativeLayout>